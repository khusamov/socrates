{
  "name": "socrates",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p watch-scss start-js",
    "build": "npm-run-all build-css build-js && gulp postbuild",
    "start-js": "react-scripts-ts start",
    "build-js": "react-scripts-ts build",
    "_build-css": "node-sass-chokidar src/ -o src/",
    "_watch-scss": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-css": "node-sass --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-scss": "npm run build-css && node-sass --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "tsc:w:server": "tsc -p server -w",
    "nodemon": "nodemon server/dist"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "cors": "^2.8.4",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "path": "^0.12.7",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts-ts": "2.17.0",
    "sqlite": "^2.9.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^10.7.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/uuid": "^3.4.3",
    "node-sass": "^4.9.3",
    "node-sass-chokidar": "^1.3.3",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.0.1"
  }
}
